@model ClienteModel

@{
    if(Context.Request.RouteValues.ContainsKey("id"))
        ViewBag.Subtitulo = "Alteração de Cliente";
    else
        ViewBag.Subtitulo = "Cadastro de Cliente";    
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>
<form asp-action="Cadastrar" class="row">
    <input type="hidden" asp-for="@Model.IdUsuario" autofocus>
    <div class="form-group col-sm-8 col-lg-4">
        @* <input type="hidden" asp-for="@Model.IdCategoria"> *@
        <label asp-for="@Model.Nome">Nome:</label><br>
        <input asp-for="@Model.Nome" class="form-control" autofocus>
        @* Mostrar problemas no campo *@
        <span asp-validation-for="@Model.Nome" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">        
        <label asp-for="@Model.Cpf">Cpf:</label><br>

        @* Observe que o input tem o tipo date, para apresentar o calendário *@
        <input asp-for="@Model.Cpf" class="form-control" autofocus>
        @* Mostrar problemas no campo *@
        <span asp-validation-for="@Model.Cpf" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">        
        <label asp-for="@Model.DataNascimento">Data Nascimento:</label><br>
        <input asp-for="@Model.DataNascimento" class="form-control" autofocus type="date">
        @* Mostrar problemas no campo *@
        <span asp-validation-for="@Model.DataNascimento" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">       
        <label asp-for="@Model.Email">E-mail:</label><br>
        <input asp-for="@Model.Email" class="form-control" autofocus>
        @* Mostrar problemas no campo *@
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    @* A alteração de senha não é permitica pelo cadastro, apenas sua inclusão, assim a rota é verificada para ver se tem um 
    parâmetro id, o que define o cadastro de inclusão. *@
    @if (!Context.Request.RouteValues.ContainsKey("id"))
    {
        <div class="w-100"></div>
        <div class="form-group col-sm-8 col-lg-4">       
            <label asp-for="@Model.Senha">Senha:</label><br>
            <input asp-for="@Model.Senha" class="form-control" autofocus>
            @* Mostrar problemas no campo *@
            <span asp-validation-for="@Model.Senha" class="text-danger"></span>
        </div>
    }
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>